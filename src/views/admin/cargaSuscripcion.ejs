<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head')%>
<body onload="myFunction()">
    <div id="loader"></div>
    <div style="display:none;" id="myDiv" class="animate-bottom">
    <%- include('../partials/headerAdmin')%>
    <form action="/admin/cargaSuscription/<%=typeof suscripcion != "undefined"? suscripcion.id + "?_method=" + metodo : null %>" method="POST" class="carga">
        <h1 class="carga">Carga de Suscripción</h1>
        <ul style="list-style: none">
            <% for(let i = 0; i < errors.length; i++ ) { %>
                <li style="color: red"><%= errors[i].msg %> </li>
            <% } %>
        </ul>
        <label for="tipoSuscripcion">Tipo de Suscripción</label>
        <input type="text" id="tipoSuscripcion" name="tipoSuscripcion" required value="<%=typeof suscripcion != "undefined"? suscripcion.nombre: null%>">
        <label for="precio">Precio</label>
        <input type="number" id="precio" name="precio" required value="<%=typeof suscripcion != "undefined"? suscripcion.precio: null%>">
        <label for="detalle">Detalle</label>
        <textarea name="detalle" id="detalle" rows="3" required><%=typeof suscripcion != "undefined"? suscripcion.detalle: null%></textarea>
        <div>
        <button type=“submit” class="carga">CARGAR</button>
        <button type=“reset” class="reset"><img src="/img/basura2.png" alt="tacho de basura"></button>
        </div>
    </form>
    <%- include('../partials/footer')%>
</div>
<script src="/js/loadjs.js" type="text/javascript"> </script>
<script src="/js/adminjs.js" type="text/javascript"> </script> 
</body>
</html>