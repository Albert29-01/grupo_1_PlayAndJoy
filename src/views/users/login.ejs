<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head')%>
<body class="login">
    <section class="login">
    <header class="login">
        <a href="/"><img class="logo" src="/img/logo-transparente.png" alt="Logo Play & Joy"></a>
    </header>
    <form action="" method="POST" class="login">
        <ul style="list-style: none">
            <li style="color: red" ><%= errors == undefined ? null : errors[0].msg %></li>
        </ul>
        <label for="usuario">Usuario</label>
        <input class="campo" type="email" name="email" required>
        <label for="password">Contraseña</label>
        <input class="campo" type="password" name="password" required>
        <button class="botonEntrar" type="submit">ENTRAR</button>
        <small>
            <input type="checkbox" name="remember"> Recordar mi usuario y contraseña<br>
        </small>
    </form>
    <section class="container">
        <small><a href="">Recuperar contraseña</a></small>
        <small><a href="/users/register">Crea tu cuenta</a></small>
        <div>
            <img src="/img/google.png" alt="logo google">
            <a href="">Ingresar con Google</a>
        </div>
        <div>
            <img src="/img/facebook2.png" alt="logo facebook">
            <a href="">Ingresar con Facebook</a>
        </div>
    </section>
    </section>  
</body>
</html>