<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head')%>
<body class="login" onload="myFunction()">
    <div id="loader"><img src="/img/lpicon.png" alt=""></div>
    <section class="login"style="display:none;" id="myDiv" class="animate-bottom">
    <header class="login">
        <a href="/"><img class="logo" src="/img/logo-transparente.png" alt="Logo Play & Joy"></a>
    </header>
    <form action="" method="POST" class="login">
        <ul style="list-style: none">
            <% for(let i = 0; i < errors.length; i++ ) { %>
                <li style="color: red"><%= errors[i].msg %> </li>
            <% } %>
            </ul>
        <label for="usuario">Usuario</label>
        <input class="campo" type="email" name="email" required>
        <label for="password">Contraseña</label>
        <input class="campo" type="password" name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required>
        <button class="botonEntrar" type="submit">ENTRAR</button>
        <small>
            <input type="checkbox" name="remember"> Recordar mi usuario y contraseña<br>
        </small>
    </form>
    <section class="container">
        <small><a href="">Recuperar contraseña</a></small>
        <small><a href="/users/register">Crea tu cuenta</a></small>
        <div>
            <img src="/img/google.png" alt="logo google">
            <a href="">Ingresar con Google</a>
        </div>
        <div>
            <img src="/img/facebook2.png" alt="logo facebook">
            <a href="">Ingresar con Facebook</a>
        </div>
    </section>
    </section>
<script src="/js/loadjs.js" type="text/javascript"> </script> 
</body>
</html>