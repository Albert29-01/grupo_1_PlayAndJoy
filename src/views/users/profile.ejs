<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head')%>
<body onload="myFunction()">
    <div id="loader"></div>
    <div style="display:none;" id="myDiv" class="animate-bottom">
        <%- include('../partials/header') %>
        <%- include('../partials/menuProfile') %>
        <div class="infoPersonal">
            <img class="avatar" src="/img/uploads/avatars/<%= user != 'undefinded'? user.imagen: null %> " alt="imagen de perfil del usuario">
            <h1><%=user.last_name %>, <%=user.first_name %></h1>
            <label>Domicilio</label>
            <p><%=user.domicilio %></p>
            <label>Localidad</label>
            <p><%=user.localidad %></p>  
            <label>Provincia</label>
            <p><%=user.provincia %></p>
            <label>E-mail</label>
            <p><%=user.email %></p>
            <button type=“button” class="carga"><a href="/users/profile/<%= user.id %>/editProfile">EDITAR</a></button> 
        </div>
        <hr>
        <h1 class="titulo">Más Vendidos</h1>
        <%- include('../partials/sectionProducts') %>
        <%- include('../partials/footer') %>
    </div>
    <script src="/js/loadjs.js" type="text/javascript"> </script> 
</body>
</html>