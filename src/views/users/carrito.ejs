<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head')%>
<body class="carrito" onload="myFunction()"> 
    <div id="loader"><img src="/img/lpicon.png" alt=""></div>
    <div style="display:none;" id="myDiv" class="animate-bottom">
    <%- include('../partials/header') %>
    <div class="carrito">
        <img src="/img/carrito3.png" alt="carrito de compras">
    </div>
    <section>
        <div>
             <section class="listado">
                     <div class="delete">
                        <ul id="delete">
                            
                        </ul>
                    </div>
                    <div class="product">
                        <ul id="productList">
                            <h2>Productos</h2>
                        </ul>
                    </div>
                    <div class="cantidad">
                        <ul id="cantidad">
                            <h2>Cantidad</h2>
                        </ul>
                    </div>
                    <div class="precio">
                        <ul id="precio">
                            <h2>Precio</h2>
                        </ul>
                    </div>
            </section>
            <hr>
            <section class="importe">
                <div class="title">
                    <h2>Importe</h2>
                </div>
                <div class="sub">
                    <p>Subtotal</p>
                    <p class="price">$precio</p>
                </div>
                <div class="envio">
                    <p>Envio</p>
                    <p class="env">$precio</p>
                </div>
                <div class="total">
                    <h3>  Total</h3>
                </div>
            </section>
            <hr>
            
    <section class="opciones">
        <div class="opc">
            <h2>Opciones de pago</h2>
