        </div>
        <div class="mediosDePago">
            <img src="/img/Visa.png" alt="">
            <img src="/img/Master.png" alt="">
            <img src="/img/PayPal.png" alt="">
            <img src="/img/Amex.png" alt="">
            <img src="/img/Diners.png" alt="">
        </div>
        <div class="finish">
            <nav class="delete">
                <button class="trash" onclick="deleteAll()"><img src="/img/basura2.png" alt="vaciar carrito"></button>
            </nav>
            <nav class="finCompra">
                <button class="fin">Finalizar compra</button>
            </nav>
        </div>
        <a href="/">Seguir comprando</a>
    </section>
    </div>
</section>
    <hr>
    <%- include('../partials/sectionProducts') %>
    <%- include('../partials/footer') %>
