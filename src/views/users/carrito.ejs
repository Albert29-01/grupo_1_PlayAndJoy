<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head')%>
<body class="carrito" onload="myFunction()"> 
    <div id="loader"><img src="/img/lpicon.png" alt=""></div>
    <div style="display:none;" id="myDiv" class="animate-bottom">
    <%- include('../partials/header') %>
    <div class="carrito">
        <img src="/img/carrito3.png" alt="carrito de compras">
    </div>
    <section>
        <div>
            <table class="listado">
                <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">Producto</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Precio</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
                <p class="cartEmpty" style="text-align: center;"></p>
            <hr>
            <section class="importe">
                <div class="title">
                    <h2>Importe</h2>
                </div>
                <div class="sub">
                    <p>Subtotal</p>
                    <p class="price">$precio</p>
                </div>
                <div class="envio">
                    <p>Envio</p>
                    <p class="env">$precio</p>
                </div>
                <div class="total">
                    <h3>  Total</h3>
                </div>
            </section>
            <hr>
            
    <section class="opciones">
        <div class="opc">
            <h2>Opciones de pago</h2>
        </div>
        <div class="efect">
            <button class="cash">Efectivo/Transferencia bancaria</button>
            <button class="tc">Tarjeta de cr√©dito</button>
        </div>
        <div class="mediosDePago">
            <img src="/img/Visa.png" alt="">
            <img src="/img/Master.png" alt="">
            <img src="/img/PayPal.png" alt="">
            <img src="/img/Amex.png" alt="">
            <img src="/img/Diners.png" alt="">
        </div>
        <div class="finish">
            <nav class="delete">
                <button class="trash" onclick="deleteAll()"><img src="/img/basura2.png" alt="vaciar carrito"></button>
            </nav>
            <nav class="finCompra">
                <button class="fin">Finalizar compra</button>
            </nav>
        </div>
        <a href="/">Seguir comprando</a>
    </section>
    </div>
</section>
    <hr>
    <%- include('../partials/sectionProducts') %>
    <%- include('../partials/footer') %>
</div>
<script src="/js/loadjs.js" type="text/javascript"> </script>
<script src="/js/cartjs.js" type="text/javascript"> </script>
</body>
</html>