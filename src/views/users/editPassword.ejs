<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head')%>
<body onload="myFunction()">
    <div id="loader"><img src="/img/lpicon.png" alt=""></div>
    <div style="display:none;" id="myDiv" class="animate-bottom">
        <%- include('../partials/header') %>
        <%- include('../partials/menuProfile') %>
        <form action="" method="POST" class="infoPersonal" enctype="multipart/form-data">
            <img class="avatar" src="/img/uploads/avatars/<%= user != 'undefinded'? user.imagen: null %> " alt="imagen de perfil del usuario">
            <ul id="errors" style="list-style: none" >
                <% for(let i = 0; i < errors.length; i++ ) { %>
                    <li  style="color: red"><%= errors[i].msg %> </li>
                    <% } %>
                </ul>
                <label for="password">Contraseña</label>
                <p id="errorPassword" style="color: red"></p>
                <input class="campo" type="password" id="password" name="password" onblur="validateForm()" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required>
                <label for="passwordConfirm">Repetir contraseña</label>
                <p id="errorPasswordConfirm" style="color: red"></p>
                <input class="campo" type="password" id="passwordConfirm" name="passwordConfirm" onblur="validateForm()" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required>
                <button type="submit" class="carga">GUARDAR</button>
            </form>
            <hr>
            <h1 class="titulo">Más Vendidos</h1>
            <%- include('../partials/sectionProducts') %>
            <%- include('../partials/footer') %>
        </div>
        <script type='text/javascript' src="/js/registerjs.js"></script>
        <script src="/js/loadjs.js" type="text/javascript"> </script> 
    </body>
    </html>